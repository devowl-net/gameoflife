<Window x:Class="Gol.Application.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gol.Application"
        xmlns:views="clr-namespace:Gol.Core.Controls.Views;assembly=Gol.Core"
        xmlns:viewModels="clr-namespace:Gol.Application.Presentation.ViewModels"
        d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Border BorderThickness="2" BorderBrush="Green" Width="300" Height="300">
        <views:MonoLifeView MonoLifeGridModel="{Binding MonoGrid}" Background="Black" />
    </Border>
</Window>
